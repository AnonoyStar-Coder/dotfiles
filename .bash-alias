#
# #!/bin/bash
#

alias la="eza --icons=always -lah --no-permissions --no-filesize --no-user --no-time --git --git-repos"

# alias nvim='vim'

alias themes='bash -c "$(wget -qO- https://git.io/vQgMr)"'

alias ls="eza --icons=always -a --git --git-repos"

alias tree="eza --icons=always -l --tree --level=2 --no-permissions --no-filesize --no-user --no-time --git --git-repos"

alias ltree="eza --icons=always -l --tree --level=2 --git --git-repos"

alias nerdfetch="curl -fsSL https://raw.githubusercontent.com/ThatOneCalculator/NerdFetch/main/nerdfetch | sh"

alias neofetch="nerdfetch"

alias config-folder='cd ~/dotfiles/'

alias nix-config='vim ~/dotfiles/configuration.nix'

alias home-config='vim ~/dotfiles/home.nix'

alias dotfiles='cd ~/dotfiles/'

alias gruv-theme='cd ~/dotfiles && git checkout main && git pull && cd -'

alias blue-theme='cd ~/dotfiles && git checkout blue && git pull && cd -'

alias green-theme='cd ~/dotfiles && git checkout green && git pull && cd -'

alias switch='sudo nixos-rebuild switch --flake ~/dotfiles/ --impure'

alias rebuild='sudo nixos-rebuild switch --flake ~/dotfiles/ --impure'

alias delete-old='sudo nix-collect-garbage --delete-old'

alias librespot='librespot -n nixos-btw -b 320 -c ~/.librespot/cache --enable-volume-normalisation --device-type computer'

alias spotify_player='spotify_player -C ~/.librespot/cache'

alias python='nix-shell -p python3 python312Packages.pip python3Packages.tkinter'

alias sysclean='sudo nix-collect-garbage --delete-old'

alias gdu='nix-shell -p gdu --command "gdu" --pure'

alias joke="nix-shell -p cowsay lolcat --command 'curl https://icanhazdadjoke.com | cowsay | lolcat'"

alias watch="watch -n 0.5"

alias observe="watch"

alias gemini="npx https://github.com/google-gemini/gemini-cli"
